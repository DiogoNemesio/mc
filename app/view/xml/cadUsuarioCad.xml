<?xml version="1.0" encoding="%CHARSET%"?>
<items>
	<item type="settings" position="label-left"/>
	<item type="fieldset" name="Identificação" label="Identificação">
		<item type="input" name="usuario" label="Usuário:" maxLength="60" labelWidth="80" inputWidth="200" value="%USUARIO%" validate="NotEmpty"/>
		<item type="input" name="nome" label="Nome:" maxLength="100" labelWidth="80" inputWidth="200" value="%NOME%" validate="NotEmpty"/>
		<item type="input" name="email" label="E-Mail:" maxLength="200" labelWidth="80" inputWidth="200" value="%EMAIL%" validate="ValidEmail"/>
		<item type="combo" name="codTipo" label="Tipo:" labelWidth="80" inputWidth="200" validate="NotEmpty"/>
		<item type="password" name="senha" label="Senha:" labelWidth="80" inputWidth="200"/>
		<item type="combo" name="codStatus" label="Status:" labelWidth="80" inputWidth="200" validate="NotEmpty"/>
	</item>   
	<item type="button" name="Salvar" value="Salvar" width="80"/>
	<item type="hidden" name="id" value="%ID%"/>
</items>